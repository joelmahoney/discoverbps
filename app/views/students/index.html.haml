.search
	.logo.discover
		%span{:aria => {hidden: 'true'}, :class => 'icon-DBPS-Dev-Assets-SRG-01'}
	.search_header
		.title_bloc
			%h1
				Welcome to Boston Public Schools Registration
			-#= image_tag('logo_beta.png', class: 'logo_beta', alt: 'beta')

	.search_section_content
		%section.search_section.first

			-# CONTENT ---------------------
			.content_left
				.text
					%p.home_intro.yellow-buttons.light_blue.big
						= auto_link(TextSnippet.find('home-intro').text)

				- if current_user_students.present?
					%p.W
						View your lists:
					%ul.user_lists
						- for student in current_user_students
							%li
								= link_to student_path(student), method: :delete, confirm: 'Are you sure you want to delete your previous search?', style: 'text-decoration: none;' do
									%span{class: "icon icon-close", title: "delete student"}

								= link_to schools_path(student_id: student.id), class: 'previous_student_search_button' do
									%span.name.big.dark_blue= student.tab_name
									%span.grade.small.dark_blue
										Grade
										= student.grade_level
									%span.schools.blue
										#{pluralize(student.home_schools.count, 'school')}, #{pluralize(student.starred_schools.count, 'favorite')}

								.steps{class: "#{student.step}"}

									%div{class: "step first #{progress_bar_class_helper(student.step, 1, 1)}"}
										= link_to root_url do
											.bar
												%span.arrow.back
												%span.arrow.front
											.label
												STEP 1 - SEARCH

									%div{class: "step second #{progress_bar_class_helper(student.step, 1, 2)}"}
										= link_to schools_path do
											.bar
												%span.arrow.back
												%span.arrow.front
											.label
												STEP 2 - LEARN

									%div{class: "step third #{progress_bar_class_helper(student.step, 1, 3)}"}
										= link_to compare_schools_path do
											.bar
												%span.arrow.back
												%span.arrow.front
											.label
												STEP 3 - COMPARE & RANK

									%div{class: "step fourth last #{progress_bar_class_helper(student.step, 1, 4)}"}
										= link_to get_ready_schools_path do
											.bar
												%span.arrow.back
												%span.arrow.front
											.label
												STEP 4 - GET READY

						%li
							%a#start_new_search.button.orange{:href => '#'}
								Start a new search

					.clr
					- if flash[:alert].present?
						%p{style: 'color: red;'}
							= flash[:alert]
					- else
						-# %p.W
							%br/
							Or search for a new student using the form below
							%br/
							%span.small
								(grade level is for the entering grade; name is optional):

					%div.new_search_form_wrap.hidden
						%p New Search
						= form_tag students_path, method: :post, remote: true do
							= render partial: 'students/search_form', locals: {sibling_search: true}

					-# Script for New Search button
					:javascript
						$(document).ready(function(){
							$('#start_new_search').click(function(e){
								e.preventDefault();
								$('.new_search_form_wrap').removeClass('hidden');
								$('#first_name').focus();
							});
						});


				- else
					%p.yellow-buttons
						%span.light
							= auto_link(TextSnippet.find('home-discover-intro').text)

					- if flash[:alert].present?
						%p{style: 'color: red;'}
							= flash[:alert]

					%div.new_search_form_wrap
						= form_tag students_path, method: :post, remote: true do
							= render partial: 'students/search_form', locals: {sibling_search: true}

			-# TIMELINE ---------------------
			.content_right

				.timeline
					.event.first
						%span.light_blue REGISTRATION TIMELINE
						= image_tag('point_white_onBlue.png', class: 'start_point point')

					.event.Y
						%span.desktop
							Discover schools

						-#%span.tablette
							= image_tag('yellow_point.png', class: 'point')

					.event.Y
						%span.desktop
							Compare options

						-#%span.tablette
							= image_tag('yellow_point.png', class: 'point')

					.event
						%span.desktop
							%span.light_blue Nov 3
							%br/
							%span.W
								School Previews and
								%br/
								School Showcases start

						-#%span.tablette
							= image_tag('yellow_point.png', class: 'point')

					.event.Y
						%span.desktop
							Create your list

						-#%span.tablette
							= image_tag('yellow_point.png', class: 'point')

					.event
						%span.desktop
							%span.light_blue Dec 15
							%br/
							%span.W
								Pre-register

						-#%span.tablette
							= image_tag('blue_point_white.png', class: 'point')


		-# CONTENT ---------------------
		%section.search_section.second
			.content_left
				.logo.register
					%span{:aria => {hidden: 'true'}, :class => 'icon-DBPS-Dev-Assets-SRG-02'}

				.text.clearfix
					%p.yellow-buttons
						= auto_link(TextSnippet.find('home-register-intro').try(:text))
						= link_to 'Learn more', 'http://www.bostonpublicschools.org/register', title: 'Learn more', class: 'u', style: 'margin-bottom: 0;', target: '_blank'
					.alignleft_half
						%h2{style: 'margin-bottom: 15px;'}
							Visit Schools
						= link_to 'Learn about school preview opportunities', 'http://www.bostonpublicschools.org/Page/652', class: 'u', target: '_blank'
					.alignleft_half
						%h2{style: 'margin-bottom: 15px;'}
							Register
						= link_to 'Collect the required documents', 'http://www.bostonpublicschools.org/requireddocs', class: 'u', target: '_blank'
						= link_to 'Plan a visit to a welcome center', 'http://www.bostonpublicschools.org/Page/653', class: 'u', target: '_blank'


			-# TIMELINE ---------------------
			.content_right

				.timeline
					.event.W.registration.green_bar
						%span.desktop
							= image_tag('point_green_white_open.png', class: 'point')
							%span
								Registration begins
								%br/
								for K, 6 & 9

							-#%span.tablette
								= image_tag('blue_point_arrow.png', class: 'point_arrow')

					.event.last_names.ai.green_bar
						%span.light_blue
							= 'Jan 5-9'
						%br/
						%span.W
							Last names A&ndash;I

					.seperator

					.event.last_names.jq.green_bar
						%span.light_blue
							= 'Jan 12-16'
						%br/
						%span.W
							Last names J&ndash;Q

					.seperator

					.event.last_names.rz.green_bar
						%span.light_blue
							= 'Jan 20-23'
						%br/
						%span.W
							Last names R&ndash;Z

					.seperator

					.event.last_names.all.green_bar
						%span.light_blue
							= 'Jan 26-30'
						%br/
						%span.W
							All last names

					.event.blank.light_blue_bar

					.event.dark_blue_bar
						%span.desktop
							= image_tag('point_green_onBlue.png', class: 'point')
							%span.light_blue
								= 'Feb 5'
							%br/
						%span.W
							All other grades' registration

					.event.dark_blue_bar
						%span.desktop
							%span.light_blue
								= 'Mar - Jul'
							%br/
						%span.W
							Assignments mailed

					.event.last.blue_bar
						%span.desktop
							%span.light_blue Sept 4
							= image_tag('point_white_onBlue.png', class: 'point')
							%br/
							%span.W
								First day of school!


		-#%section.search_section.third

			-# CONTENT ---------------------
			.content_left
				.logo.succeed
					%span{:aria => {hidden: 'true'}, :class => 'icon-DBPS-Dev-Assets-SRG-03'}
				.text
					%p.yellow-buttons
					= auto_link(TextSnippet.find('home-succeed-intro').text)
					= link_to 'Explore', 'http://www.bostonpublicschools.org/transitionsupport', title: 'Explore', style: 'margin-bottom:0;', target: '_blank'
